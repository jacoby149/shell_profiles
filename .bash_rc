#display messages
echo 'commands - see a list of commands';
echo 'links - see a list of links';
alias commands='echo "see dc dq serve profiles vc refresh ranger"'
alias links='echo "home box g web10"'

# commands
alias see='open .'
alias dc='sudo docker-compose up --build'
alias dq='sudo docker-compose down'
alias profiles='lvim ~/Documents/GitHub/shell_profiles/.bash_rc'
alias refresh='source ~/.zshrc'
alias r='source ranger'
alias ds='sudo systemctl start docker'

#links
alias c='cd ~/Documents/GitHub'
alias web10='cd ~/Documents/GitHub/web10'
alias home='cd ~'

#start up tmux, dont let it start within itself!!!

if command -v tmux &> /dev/null && [ -n "$PS1" ] && [[ ! "$TERM" =~ screen ]] && [[ ! "$TERM" =~ tmux ]] && [ -z "$TMUX" ]; then
  exec tmux
fi

export EDITOR='lvim'
export PATH=$PATH:/usr/local/go/bin
export PATH=$PATH:~/go/bin
